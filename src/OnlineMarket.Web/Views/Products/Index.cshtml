@using OnlineMarket.Service.Common.Utils;
@model PagedList<ProductBaseViewModel>
<div class="row g-10 " style="display: flex;justify-content: center">
    @{
        foreach (var product in Model)
        {
            <div class="col-lg-4 card min-h-300px mb-5 me-5" style="width: 270px">
                <div class="mt-5 mb-5">
                    <a asp-controller="products" asp-action="get" asp-route-productId="@product.Id">
                        <div class="w-200px h-200px" style="display: flex;justify-content: center">
                            <img src="~/@product.ImagePath" class="card-rounded" />
                        </div>
                    </a>
                    <div class="text-center">
                        <span class="fs-5 fw-bold text-gray-600">@product.Name</span>
                    </div>
                    <br />
                    @{
                        if (product.DiscountPrice > 0)
                        {
                            <del class="fs-5 fw-bold text-gray-600">@product.OriginalPrice uzs</del>
                            <span class="badge badge-info">-@product.DiscountPrice uzs</span>
                            <br />
                            <span class="badge badge-info">@product.ResultPrice uzs</span>
                        }
                        else
                        {
                            <span class="svg-icon svg-icon-primary svg-icon-2x">
                                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                    <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                        <rect x="0" y="0" width="24" height="24" />
                                        <path d="M2,6 L21,6 C21.5522847,6 22,6.44771525 22,7 L22,17 C22,17.5522847 21.5522847,18 21,18 L2,18 C1.44771525,18 1,17.5522847 1,17 L1,7 C1,6.44771525 1.44771525,6 2,6 Z M11.5,16 C13.709139,16 15.5,14.209139 15.5,12 C15.5,9.790861 13.709139,8 11.5,8 C9.290861,8 7.5,9.790861 7.5,12 C7.5,14.209139 9.290861,16 11.5,16 Z" fill="#000000" opacity="0.3" transform="translate(11.500000, 12.000000) rotate(-345.000000) translate(-11.500000, -12.000000) " />
                                        <path d="M2,6 L21,6 C21.5522847,6 22,6.44771525 22,7 L22,17 C22,17.5522847 21.5522847,18 21,18 L2,18 C1.44771525,18 1,17.5522847 1,17 L1,7 C1,6.44771525 1.44771525,6 2,6 Z M11.5,16 C13.709139,16 15.5,14.209139 15.5,12 C15.5,9.790861 13.709139,8 11.5,8 C9.290861,8 7.5,9.790861 7.5,12 C7.5,14.209139 9.290861,16 11.5,16 Z M11.5,14 C12.6045695,14 13.5,13.1045695 13.5,12 C13.5,10.8954305 12.6045695,10 11.5,10 C10.3954305,10 9.5,10.8954305 9.5,12 C9.5,13.1045695 10.3954305,14 11.5,14 Z" fill="#000000" />
                                    </g>
                                </svg>
                            </span>
                            <span class="fs-5 fw-bold text-gray-600 mx-2">@product.OriginalPrice so'm</span>
                        }
                        <a href="#" class="btn btn-icon btn-primary">
                            <span class="svg-icon svg-icon-1">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                    <rect x="0" y="0" width="24" height="24" />
                                    <path d="M18.1446364,11.84388 L17.4471627,16.0287218 C17.4463569,16.0335568 17.4455155,16.0383857 17.4446387,16.0432083 C17.345843,16.5865846 16.8252597,16.9469884 16.2818833,16.8481927 L4.91303792,14.7811299 C4.53842737,14.7130189 4.23500006,14.4380834 4.13039941,14.0719812 L2.30560137,7.68518803 C2.28007524,7.59584656 2.26712532,7.50338343 2.26712532,7.4104669 C2.26712532,6.85818215 2.71484057,6.4104669 3.26712532,6.4104669 L16.9929851,6.4104669 L17.606173,3.78251876 C17.7307772,3.24850086 18.2068633,2.87071314 18.7552257,2.87071314 L20.8200821,2.87071314 C21.4717328,2.87071314 22,3.39898039 22,4.05063106 C22,4.70228173 21.4717328,5.23054898 20.8200821,5.23054898 L19.6915238,5.23054898 L18.1446364,11.84388 Z" fill="#fff" />
                                    <path d="M6.5,21 C5.67157288,21 5,20.3284271 5,19.5 C5,18.6715729 5.67157288,18 6.5,18 C7.32842712,18 8,18.6715729 8,19.5 C8,20.3284271 7.32842712,21 6.5,21 Z M15.5,21 C14.6715729,21 14,20.3284271 14,19.5 C14,18.6715729 14.6715729,18 15.5,18 C16.3284271,18 17,18.6715729 17,19.5 C17,20.3284271 16.3284271,21 15.5,21 Z" fill="#fff" />
                                </svg>
                            </span>
                        </a>
                    }

                </div>
            </div>
        }
    }

    <ul class="pagination pagination-outline">
        @{
            if (Model.MetaData.TotalPages > 1)
            {
                if (Model.MetaData.HasPrevious)
                {
                    <li class="page-item previous m-1">
                        <a asp-controller="products" asp-action="index" asp-route-page="@(Model.MetaData.CurrentPage-1)" class="page-link">
                            <i class="previous"></i>
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item previous disabled m-1">
                        <a href="#" class="page-link"><i class="previous"></i></a>
                    </li>
                }
                for (int _page = 1; _page <= Model.MetaData.TotalPages; _page++)
                {
                    if (_page == Model.MetaData.CurrentPage)
                    {
                        <li class="page-item active m-1">
                            <a asp-controller="products" asp-action="index" asp-route-page="@_page" class="page-link">@_page</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item m-1">
                            <a asp-controller="products" asp-action="index" asp-route-page="@_page" class="page-link">@_page</a>
                        </li>
                    }
                }
                if (Model.MetaData.HasNext)
                {
                    <li class="page-item next m-1">
                        <a asp-controller="products" asp-action="index" asp-route-page="@(Model.MetaData.CurrentPage+1)" class="page-link"><i class="next"></i></a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled next m-1">
                        <a href="#" class="page-link"><i class="next"></i></a>
                    </li>
                }
            }
        }
    </ul>
</div>